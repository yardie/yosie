<h1>Editing booking</h1>

<% form_for(@booking) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :ArrivalDate %><br />
    <%= f.date_select :ArrivalDate %>
  </p>
  <p>
    <%= f.label :DepartureDate %><br />
    <%= f.date_select :DepartureDate %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @booking %> |
<%= link_to 'Back', bookings_path %>